# ===================================
# ENV COMPLETO PARA GPU RTX 4000
# Use este arquivo no Easypanel!
# ===================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=
API_TITLE=Qdrant Hybrid Search API
API_VERSION=1.0.0

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION=hybrid_search

# Qdrant GPU Settings (RTX 4000)
QDRANT__GPU__INDEXING=1
QDRANT__GPU__FORCE_HALF_PRECISION=false
QDRANT__GPU__DEVICE_FILTER=0
QDRANT__STORAGE__PERFORMANCE__MAX_THREADS=8
QDRANT__STORAGE__OPTIMIZERS__INDEXING_THRESHOLD=10000

# Model Configuration
DENSE_MODEL=intfloat/multilingual-e5-large
SPARSE_MODEL=prithivida/Splade_PP_en_v1

# GPU Settings (RTX 4000 - 8GB VRAM)
USE_GPU=true
CUDA_DEVICE=0
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility
CUDA_LAUNCH_BLOCKING=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
TORCH_CUDA_ARCH_LIST=6.0;6.1;7.0;7.5;8.0;8.6;8.9;9.0

# Performance Settings (Optimized for RTX 4000)
BATCH_SIZE=64
MAX_SEQUENCE_LENGTH=512
NUM_WORKERS=8
CACHE_EMBEDDINGS=true
EMBEDDING_CACHE_SIZE=50000

# Search Settings
DEFAULT_LIMIT=10
MAX_LIMIT=100
FUSION_WEIGHT=0.5

# N8N Integration
N8N_WEBHOOK_ENABLED=true
N8N_WEBHOOK_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=["*"]

# Model Cache
HF_HOME=/app/models
TRANSFORMERS_CACHE=/app/models
SENTENCE_TRANSFORMERS_HOME=/app/models

# Python Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Timezone
TZ=UTC